#!/bin/bash
set -e

{{ if .include_defaults -}}

# Hash: @anthropic-ai/claude-code @openai/codex @github/copilot @google/gemini-cli

# Install global npm packages
if command -v mise >/dev/null 2>&1; then
    # Activate mise in this shell
    eval "$(mise activate bash)" 2>/dev/null || true

    # Install global npm packages
    npm install -g \
        @anthropic-ai/claude-code \
        @openai/codex \
        @github/copilot \
        @google/gemini-cli \
        >/dev/null 2>&1 || true
fi

{{ end -}}
